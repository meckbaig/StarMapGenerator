<Window x:Class="StarMapGenerator.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarMapGenerator.Pages"
        mc:Ignorable="d"
        Title="SOTS 1 Map Generator &amp; Editor" Height="900" Width="1000" Background="#1E1E1E">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2D2D30" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Настройки карты" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                    <TextBlock Text="Имя карты:" Foreground="#CCC"/>
                    <TextBox Text="{Binding MapName}" Margin="0,2,0,5"/>

                    <TextBlock Text="Путь сохранения:" Foreground="#CCC"/>
                    <TextBox Text="{Binding OutputPath}" Margin="0,2,0,5"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <local:SliderControl Label="Star Count" Value="{Binding StarCount}" Minimum="10" Maximum="500" TickFrequency="1"/>
                        <local:SliderControl Label="Min Distance" Value="{Binding MinDistance}" Minimum="1" Maximum="20"/>
                        <local:SliderControl Label="Max Distance" Value="{Binding MaxDistance}" Minimum="5" Maximum="50"/>
                        <local:SliderControl Label="Mean Distance" Value="{Binding MeanDistance}" Minimum="2" Maximum="30"/>
                        <local:SliderControl Label="Variance" Value="{Binding Variance}" Minimum="0" Maximum="1"/>
                        <local:SliderControl Label="Thickness" Value="{Binding Thickness}" Minimum="0" Maximum="10"/>
                        <local:SliderControl Label="Core Radius Frac" Value="{Binding CoreRadiusFraction}" Minimum="0" Maximum="1"/>
                        <local:SliderControl Label="Core Scale" Value="{Binding CoreScale}" Minimum="0.1" Maximum="5"/>
                        <local:SliderControl Label="Falloff Power" Value="{Binding FalloffPower}" Minimum="0.1" Maximum="10"/>
                        <local:SliderControl Label="Collision Stage" Value="{Binding CollisionStage}" Minimum="0" Maximum="1"/>
                        <local:SliderControl Label="Collision Tilt" Value="{Binding CollisionTiltDegrees}" Minimum="0" Maximum="360"/>

                        <TextBlock Text="Map Mode" Foreground="#CCC" Margin="0,5,0,2"/>
                        <ComboBox ItemsSource="{Binding MapModes}" SelectedItem="{Binding SelectedMode}" Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <Button Content="Сгенерировать карту" Command="{Binding GenerateCommand}" Height="30" Margin="0,0,0,5" Background="#007ACC" Foreground="White"/>
                    <Button Content="Сохранить карту" Command="{Binding SaveCommand}" Height="30" Background="#28A745" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" Background="Black" ClipToBounds="True">
            <ItemsControl ItemsSource="{Binding Stars}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas x:Name="MapCanvas" Background="Black"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding ViewX}"/>
                        <Setter Property="Canvas.Top" Value="{Binding ViewY}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="20" Height="20" Margin="-10,-10,0,0">
                            <Grid.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.ToggleStarCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                            </Grid.InputBindings>

                            <Ellipse Width="18" Height="18" Stroke="{Binding OwnerColorBrush}" StrokeThickness="2" 
                                     Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}"/>

                            <Ellipse Width="6" Height="6" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="2"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <TextBlock Text="{Binding OwnerIndex}" Foreground="{Binding OwnerColorBrush}" 
                                       FontSize="10" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top"
                                       Margin="0,-7,-3,0"
                                       Visibility="{Binding IsSelected, Converter={StaticResource BoolToVis}}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
        <Label Grid.Column="1" 
               Content="{Binding OpenedMapPath}" 
               Foreground="#CCC"
               Padding="5" HorizontalAlignment="Right" 
               VerticalAlignment="Top" Margin="10"/>
    </Grid>
</Window>