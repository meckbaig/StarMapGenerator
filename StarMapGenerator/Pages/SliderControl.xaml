<UserControl x:Class="StarMapGenerator.Pages.SliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root"> <StackPanel Margin="0,0,0,10">
        <DockPanel LastChildFill="False">
            <TextBlock Text="{Binding Label, ElementName=Root}" Foreground="#CCC"/>
            <TextBox Text="{Binding Value, ElementName=Root, StringFormat=N2}" 
                     Width="50" DockPanel.Dock="Right" TextAlignment="Right"/>
        </DockPanel>
        <Slider Value="{Binding Value, ElementName=Root}" 
                Minimum="{Binding Minimum, ElementName=Root}" 
                Maximum="{Binding Maximum, ElementName=Root}" 
                TickFrequency="{Binding TickFrequency, ElementName=Root}" 
                IsSnapToTickEnabled="True" Margin="0,2,0,0"/>
    </StackPanel>
</UserControl>